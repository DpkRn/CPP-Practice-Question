{
  "manifest_version": 3,
  "name": "refereshing check",
  "version": "1.0",
  "description": "run code background when page refershed or updated",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
 
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
     
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
 
  "background": {
      "service_worker": "background.js",
      "type": "module"
  }
  
}
